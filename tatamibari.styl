table
  width: 100%
svg
  width: 100%
  height: 100%
#symbols
  width: 0px
  height: 0px

.input
  display: inline-block
  margin: 0ex 1ex

#solve
  height: 40px

// These widths must match minorWidth and majorWidth in sudoku.coffee
svg .grid line
  stroke-width: 0.05
  stroke: #666
  stroke-linecap: square

  &.border
    stroke-width: 0.15
    stroke: black

svg .edges line
  stroke-width: 0.15
  stroke: rgba(0,0,0,0)
  stroke-linecap: square

  &.on
    stroke: black

svg .edges.play line
  cursor: pointer

  &:hover
    stroke: #888

svg .squares
  g
    cursor: pointer
  rect
    fill: white
  g:hover rect
    fill: hsl(50,100%,80%)
  g.selected rect
    fill: hsl(50,100%,50%) // based on #ffda00 from NYTimes

svg .errors
  circle
    fill: red
