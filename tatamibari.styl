table
  width: 100%
svg
  width: 100%
  height: 100%
#symbols
  width: 0px
  height: 0px
#header
  margin-top: 20px

.input
  display: inline-block
  margin: 0ex 1ex

#solve
  height: 40px

// These widths must match minorWidth and majorWidth in sudoku.coffee
svg .grid line
  stroke-width: 0.05
  stroke: #666
  stroke-linecap: square

  &.border
    stroke-width: 0.15
    stroke: black

svg .edges line
  stroke-width: 0.15
  stroke: rgba(0,0,0,0)

  &.on
    stroke: black
    stroke-linecap: square

  &.toggle
    cursor: pointer
    stroke-width: 0.4

    &:hover
      stroke: hsla(50,100%,50%,0.5) // rgba(0,0,0,0.5)

svg .squares
  &.toggle g
    cursor: pointer
  rect
    fill: white
  &.toggle g:hover rect
    fill: hsl(50,100%,80%)
  g.selected rect
    fill: hsl(50,100%,50%) // based on #ffda00 from NYTimes
  //g.s0 rect
  g.s1 rect
    fill: #aaa

svg .errors
  circle
    fill: red

#buttons
  position: fixed
  top: 0
  left: 0
  right: 0
  text-align: center
  user-select: none

  div
    display: inline-block
    border: solid;
    width: 25px
    height: 25px
    padding: 2px
    text-align: center
    font-weight: 700
    font-size: 20px
    background: #ddd
    cursor: pointer
    vertical-align: top

    &:hover { background: hsl(50,100%,80%); }

  #button-erase, #button-color
    width: auto
